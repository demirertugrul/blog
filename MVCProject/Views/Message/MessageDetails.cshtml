@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Mesaj Detayları</h1>
    @Html.Label("Mesaj ID")
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
    <br />
    @Html.Label("Mesaj Başlığı")
    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
   <br />
    @Html.Label("Mesaj İçeriği")
    @Html.TextAreaFor(x => x.Details, 10,3,new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Güncelle</button>