@model IEnumerable<EntityLayer.Concrete.Comment>
<div class="comment-top">
    <h4>Comments</h4>
    @foreach (var item in Model)
    {
        <div class="media">
            @if (item.ID == 4)
            {
                <img style="width:100px;height: 100px" src="~/web/images/omerreis.jpg" alt="" class="img-fluid" />
            }
            else
            {
                <img style="width:100px;height: 100px" src="~/web/images/karadelik.jpg" alt="" class="img-fluid" />
            }
            <div class="media-body">
                <h5 class="mt-0">@item.UserName</h5>
                <p>
                    @item.Content
                </p>
            </div>
        </div>
    }
</div>